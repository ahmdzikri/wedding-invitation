{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": []
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
    "ignore": ["**/fixtures/*/*.json", "**/*.min.js"]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "suspicious": {
        "noShadowRestrictedNames": "off",
        "noArrayIndexKey": "off"
      },
      "style": {
        "useImportType": "warn"
      },
      "correctness": {
        "useExhaustiveDependencies": "off"
      },
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "quoteStyle": "double",
      "arrowParentheses": "always",
      "trailingComma": "all",
      "lineEnding": "crlf"
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  }
}
